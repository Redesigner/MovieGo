<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:text="Movie title placeholder"
        android:id="@+id/movie_title"
        android:gravity="center_horizontal"
        android:layout_marginBottom="12dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/movieThumbnail"
                android:src="@android:drawable/radiobutton_on_background"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Original release date:"
                android:id="@+id/movie_date_title"
                android:layout_row="1"
                android:layout_column="1"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1994"
                android:textSize="16sp"
                android:id="@+id/movie_date"
                android:layout_gravity="right"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plot Synopsis"
                android:textSize="24sp"
                android:id="@+id/movie_overview_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sed viverra fringilla purus quis sollicitudin. Phasellus at venenatis sapien. Cras mattis urna quis tortor finibus viverra. Nullam vehicula placerat libero, a tristique tellus dictum eget. Vivamus ac ex lectus. Nulla facilisi. Vivamus faucibus sapien rhoncus aliquet pretium. Maecenas dignissim ex diam, rutrum facilisis diam ultrices eget. Sed dignissim tortor quis tellus aliquam, vitae varius neque euismod. "
                android:id="@+id/movie_overview"
                android:layout_row="4"
                android:layout_column="1"
                android:elegantTextHeight="false"
                android:maxWidth="10dp" />
        </LinearLayout>
    </LinearLayout>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_weight="1"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        android:isIndicator="true"
        android:foregroundGravity="top"/>
</LinearLayout>
</ScrollView>